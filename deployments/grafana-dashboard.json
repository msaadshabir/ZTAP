{
  "dashboard": {
    "title": "ZTAP Zero Trust Monitoring",
    "tags": ["ztap", "security", "zero-trust"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Policies Enforced",
        "type": "stat",
        "targets": [
          {
            "expr": "ztap_policies_enforced_total",
            "legendFormat": "Total Policies"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Flow Actions",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(ztap_flows_allowed_total[5m])",
            "legendFormat": "Allowed"
          },
          {
            "expr": "rate(ztap_flows_blocked_total[5m])",
            "legendFormat": "Blocked"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 6,
          "y": 0
        },
        "yaxes": [
          {
            "label": "Flows/sec",
            "format": "short"
          }
        ]
      },
      {
        "id": 3,
        "title": "Anomaly Score",
        "type": "gauge",
        "targets": [
          {
            "expr": "ztap_anomaly_score",
            "legendFormat": "Score"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 18,
          "y": 0
        },
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 50
                },
                {
                  "color": "red",
                  "value": 75
                }
              ]
            },
            "max": 100,
            "min": 0
          }
        }
      },
      {
        "id": 4,
        "title": "Policy Load Time",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(ztap_policy_load_duration_seconds_bucket[5m]))",
            "legendFormat": "p95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(ztap_policy_load_duration_seconds_bucket[5m]))",
            "legendFormat": "p99"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "yaxes": [
          {
            "label": "Seconds",
            "format": "s"
          }
        ]
      },
      {
        "id": 5,
        "title": "Block Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(ztap_flows_blocked_total[5m]) / (rate(ztap_flows_allowed_total[5m]) + rate(ztap_flows_blocked_total[5m]))",
            "legendFormat": "Block Rate"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 12,
          "y": 8
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit"
          }
        }
      },
      {
        "id": 6,
        "title": "Flow Timeline",
        "type": "timeseries",
        "targets": [
          {
            "expr": "ztap_flows_allowed_total",
            "legendFormat": "Allowed (cumulative)"
          },
          {
            "expr": "ztap_flows_blocked_total",
            "legendFormat": "Blocked (cumulative)"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 18,
          "x": 0,
          "y": 16
        }
      }
    ],
    "refresh": "5s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "version": 1
  }
}
